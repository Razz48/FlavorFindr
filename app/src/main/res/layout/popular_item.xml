<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="87dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

<!--           <ImageView-->
<!--               android:id="@+id/popularImg"-->
<!--               android:layout_width="64dp"-->
<!--               android:layout_height="64dp"-->
<!--               android:src="@mipmap/ic_launcher"-->
<!--               app:layout_constraintBottom_toBottomOf="parent"-->
<!--               app:layout_constraintStart_toStartOf="parent"-->
<!--               app:layout_constraintTop_toTopOf="parent" />-->

           <ImageView
               android:id="@+id/popularImg"
               android:layout_width="64dp"
               android:layout_height="64dp"
               android:scaleType="centerCrop"
               android:layout_marginLeft="8dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:srcCompat="@tools:sample/avatars" />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:text="textview"
               android:fontFamily="@font/yeonsung_regular"
               android:textSize="20dp"
               android:textColor="@color/black1"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.2"
               app:layout_constraintBottom_toBottomOf="@id/popularImg"
               app:layout_constraintStart_toEndOf="@id/popularImg"
               app:layout_constraintTop_toTopOf="@id/popularImg"
               app:layout_constraintVertical_bias=".5" />

           <TextView
               android:id="@+id/textPrice"
               android:layout_width="27dp"
               android:layout_height="0dp"
               android:layout_marginTop="4dp"
               android:text="$7"
               app:layout_constraintEnd_toEndOf="@+id/addToCart"
               app:layout_constraintStart_toStartOf="@+id/addToCart"
               app:layout_constraintTop_toTopOf="@+id/popularImg" />

           <TextView
               android:id="@+id/addToCart"
               android:layout_width="80dp"
               android:layout_height="20dp"
               android:layout_marginEnd="16dp"
               android:layout_marginBottom="4dp"
               android:background="@drawable/addtocartshape"
               android:fontFamily="@font/lato_bold"
               android:gravity="center"
               android:text="Add To Cart"
               android:textColor="@color/white"
               android:textSize="14dp"
               app:layout_constraintBottom_toBottomOf="@+id/popularImg"
               app:layout_constraintEnd_toEndOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
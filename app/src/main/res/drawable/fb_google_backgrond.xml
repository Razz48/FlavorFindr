<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--shadow-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#115A6CEA" />
            <corners android:radius="15dp" />
            <padding
                android:bottom="26dp"
                android:left="12dp"
                android:right="12dp"
                android:top="26dp" />
        </shape>
    </item>
    <!-- Background with border -->
    <item android:top="26dp" android:left="12dp" android:right="12dp" android:bottom="26dp">
        <shape android:shape="rectangle">
            <solid android:color="#F4F4F4" />
            <corners android:radius="15dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>